{
	"name": "HomegearGpio::poll",
	"category": "GPIO Operations",
	"shortDescription": "Waits for a GPIO state change to occur.",
	"description": "Waits for a GPIO state change to occur. Before calling this method, the GPIO needs to be opened by calling HomegearGpio::open(). This method blocks until the configured edge is detected on the GPIO (see <a href=\"#HomegearGpiopoll\">setEdge()</a>). It only works, when the GPIO is configured as input. If no state change occurs the method needs close to no system resources.",
	"signatures": ["int poll(int $index, int $timeout [, bool $debounce = false])"],
	"parameters": [{
		"name": "index",
		"type": "int",
		"description": "The index of the GPIO",
		"exampleValue": "18"
	}, {
		"name": "timeout",
		"type": "int",
		"description": "The maximum time to wait for a state change.",
		"exampleValue": ""
	}, {
		"name": "debounce",
		"type": "bool",
		"description": "When set Homegear waits for 20 ms after receiving an interrupt. Set this if the GPIO is connected to an analog input like a switch.",
		"exampleValue": "true"
	}],
	"returnValue": "Returns the state (0 or 1) on success.",
	"errors": [{
		"code": -1,
		"description": "Error reading the GPIO"
	}, {
		"code": -2,
		"description": "Timeout"
	}],
	"exampleOutput": [{
		"call": "poll(17, 5000)",
		"output": "MQ=="
	}],
	"example": ""
}
